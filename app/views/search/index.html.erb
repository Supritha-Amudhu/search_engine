<div class="container">
  <div class="page-header">
    <h1>Search</h1>      
  </div>
  	<%= form_tag('/search_results', :remote => true, :id => "search_form", :method => 'GET') do %>
	    <div class="container">
		    <div class="row">    
		        <div class="col-xs-8 col-xs-offset-2">
				    <div class="input-group">
		                <div class="input-group-btn search-panel">
                          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" id="search_category">
                              <span id="search_concept">All</span> <span class="caret"></span>
                          </button>
		                    <ul class="dropdown-menu" role="menu">
		                      <li><a href="#tickets">Tickets</a></li>
		                      <li><a href="#users">Users</a></li>
		                      <li><a href="#organizations">Organizations</a></li>
		                      <li class="divider"></li>
		                      <li><a href="#all">All</a></li>
		                    </ul>
		                </div>
		                <input type="hidden" name="search_param" value="all" id="search_param">         
		                <input type="text" class="form-control" name="search_text" placeholder="Search">
		                <span class="input-group-btn">
		                    <button class="btn btn-info" id="search_button" type="submit">
		                    	<span class="glyphicon glyphicon-search"></span>
		                    </button>
		                </span>
		            </div>
		        </div>
			</div>
		</div>

		<%= render :partial => "search_results", :locals => { :ticket_results => nil, :user_results => nil, :org_results => nil, :no_results => false } %>
	<% end %>
	<div class="modal fade" id="searchDetailsModal" tabindex="-1" role="dialog" aria-labelledby="searchDetailsModalTitle" aria-hidden="true">
	  <div class="modal-dialog" role="document" aria-hidden="true">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h5 class="modal-title" id="searchDetailsModalTitle">Search Item Details</h5>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
	        Temp text
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
	      </div>
	    </div>
	  </div>
	</div>
</div>