<div id="search_results_container">
	<% if message %>
		<%= message %>
	<% elsif no_results %>
		Sorry, no results found.
	<% else %>
		<div class="container">
			<ul class="nav nav-tabs">
				<li id="tickets_tab"><a data-toggle="tab" href="#tickets">Tickets</a></li>
				<li id="users_tab"><a data-toggle="tab" href="#users">Users</a></li>
				<li id="organizations_tab"><a data-toggle="tab" href="#organizations">Organizations</a></li>
			</ul>	
			<div class="tab-content">
				<div id="tickets" class="tab-pane fade in active">
					<%= render :partial => "search_results_table", :locals => { :items => ticket_results, :param => "tickets" } %>
				</div>
				<div id="users" class="tab-pane fade">
					<%= render :partial => "search_results_table", :locals => { :items => user_results, :param => "users" } %>
				</div>
				<div id="organizations" class="tab-pane fade">
					<%= render :partial => "search_results_table", :locals => { :items => org_results, :param => "organizations" } %>
				</div>
			</div>
		</div>	
	<% end %>
</div>
